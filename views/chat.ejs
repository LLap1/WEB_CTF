<%- include('./partials/head.ejs') %>
  <body>
    <%- include('./partials/nav.ejs') %>

      <h1>Global Chat Room</h1>

      <div class="container-fluid" id="messages">
        <% feed.forEach(function(post){ %>
          <span>
          <img width="100" height="100" src="image/users/<%= post.filename %>">
          <p><%- post.username %>:</p>
          <p><%- post.message %></p>
          </span>
        <% }); %>  
      </div>

      <div style="position: fixed; bottom:0;width:100vw;">
          <form id="chat" action="">
              <input type="text" name="" id="input" class="form-control" placeholder="Enter the message..." value="" required="required" title="" style="background:rgb(34, 20, 48);color:white;">
          </form>
      </div>
      

      <script src="http://127.0.0.1:3000/socket.io/socket.io.js"></script>
      <script src="js/chat.js"></script>

